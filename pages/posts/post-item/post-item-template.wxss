/* pages/posts/post-item/post-item.wxss */
.post-container {
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
  background-color:#fff;
  border-top: 1px solid #ededed;
  border-bottom: 1px solid #ededed;
  padding-bottom: 10rpx;
}

.post-author-date{
  display: flex;
  flex-direction: row;
  align-items: center;
}

.post-author{
  height: 60rpx;
  width: 60rpx;
}

.post-date {
  margin-left: 20rpx;
  vertical-align: middle;
  font-size: 26rpx;
}

.post-title {
  height: 60rpx;
  line-height: 60rpx;
  font-weight: 600;
  font-size: 34rpx;
  margin-left: 10px;
  color: #333;
}

.post-image {
  width: 100%;
  height: 340rpx;
  margin-bottom: 15px;
}

.post-content{
  font-size: 28rpx;
  color: #666;
  letter-spacing: 2rpx;
  margin-left: 20rpx;
  margin-bottom: 20rpx;
}

.post-like{
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 26rpx;
  margin-left: 20rpx;
}

.post-like .post-like-image{
  height: 32rpx;
  width: 32rpx;
  margin-right:16rpx;
}

.post-like .post-like-font{
  margin-right: 40rpx;
}