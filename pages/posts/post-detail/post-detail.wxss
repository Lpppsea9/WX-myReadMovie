.container{
  display: flex;
  flex-direction: column;
}

.header-image{
  width: 100%;
  height: 460rpx;
}

.author-date {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 20rpx;
  margin-left: 30rpx;
}

.avator{
  width: 64rpx;
  height: 64rpx;
}

.author {
  font-size: 30rpx;
  font-weight: 300;
  margin-left: 20rpx;
  color:#666;
}

.const-text {
  font-size: 24rpx;
  color:#999;
  margin-left: 20rpx;
}

.date{
  font-size: 24rpx;
  margin-left: 30rpx;
  color:#999;
}

.title{
  font-size: 36rpx;
  font-weight: 700;
  letter-spacing: 2px;
  margin-left: 40rpx;
  margin-top: 30rpx;
  color: #4b556c;
}

.tool{
  margin-top: 20rpx;
}

.circle-image{
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  margin-right: 40rpx;
}

.circle-image image {
  width: 90rpx;
  height: 90rpx;
}

.share-image {
  margin-left: 30rpx;
}

.horizon {
  width: 660rpx;
  height: 1px;
  background-color: gray;
  position: relative;
  bottom:45rpx;
  margin: 0 auto;
  z-index: -80;
}

.detail{
  color:#666;
  margin-left: 30rpx;
  margin-right: 30rpx;
  line-height: 44rpx;
  letter-spacing: 2px;
}

